<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/SettingsTitleText"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="系统设置" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/dividerGray" />

    <LinearLayout
        android:clickable="true"
        android:background="@drawable/config_item_background"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:paddingLeft="8dp">

        <TextView
            style="@style/SettingsContentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="无图模式" />

        <CheckBox
            android:id="@+id/none_pics_cb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerLightGray" />

    <LinearLayout
        android:clickable="true"
        android:background="@drawable/config_item_background"
        android:id="@+id/wifi_auto_load_img_ll"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:paddingLeft="8dp">

        <TextView
            style="@style/SettingsContentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="WiFi下自动加载图片" />

        <CheckBox
            android:id="@+id/wifi_auto_load_img_cb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerLightGray" />

    <LinearLayout
        android:clickable="true"
        android:background="@drawable/config_item_background"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:paddingLeft="8dp">

        <TextView
            style="@style/SettingsContentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="摇一摇反馈" />

        <CheckBox
            android:id="@+id/shake_feedback_cb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

</LinearLayout>