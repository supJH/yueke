<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/DrawerItemTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="明知女孩已有男朋友还去追求的男生通常是怎样的人？" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_textfield" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/topic_psychology" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/holo_blue_light"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="17k"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:lines="4"
                android:text="这个行为基本无可指摘，而且体现了这个男生的原则性和灵活性（假设他没追过已婚妇女）说这个人有原则性是因为：他没有追已婚妇女，在任何国家追求已婚妇女并与之发生性行为都是违背道德甚至触犯法律的说这个人有灵活性是因为：在任何一个时代、任何一个国家都没有规定追求有男友的女孩是不道德或触犯法律" />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>